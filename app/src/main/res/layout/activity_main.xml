<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lucyzhao.calculator.MainActivity">



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textColor="#de5dac"
        android:textSize ="50sp"
        android:id="@+id/background"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="#f7c6e0"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:layout_gravity="end"
        android:textColor="#de5dac"
        android:textAlignment="viewEnd"
        android:textSize ="50sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:id="@+id/screen"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:background="#00f7c6e0"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="30dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="25dp"
        android:id="@+id/num1"
        android:layout_below="@+id/screen"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/screen"
        android:textColor="@color/abc_btn_colored_borderless_text_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="25dp"
        android:id="@+id/num2"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/num1"
        android:textColor="@color/abc_btn_colored_borderless_text_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="25dp"
        android:id="@+id/num3"
        android:layout_alignRight="@+id/background"
        android:layout_alignBottom="@+id/num2"
        android:textColor="@color/abc_btn_colored_borderless_text_material" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="25dp"
        android:id="@+id/num4"
        android:layout_centerVertical="false"
        android:layout_alignLeft="@+id/num1"
        android:layout_alignStart="@+id/num1"
        android:layout_below="@id/num1"
        android:layout_marginTop="20dp"
        android:textColor="@color/abc_btn_colored_borderless_text_material" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="25dp"
        android:id="@+id/num5"
        android:layout_alignBottom="@+id/num4"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_btn_colored_borderless_text_material" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="25dp"
        android:id="@+id/num6"
        android:layout_alignBottom="@+id/num5"
        android:layout_alignLeft="@+id/num3"
        android:layout_alignStart="@+id/num3"
        android:textColor="@color/abc_btn_colored_borderless_text_material" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="25dp"
        android:id="@+id/num7"
        android:layout_below="@+id/num4"
        android:layout_alignStart="@+id/num4"
        android:layout_marginTop="20dp"
        android:textColor="@color/abc_btn_colored_borderless_text_material" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="25dp"
        android:id="@+id/num8"
        android:layout_alignBottom="@+id/num7"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_btn_colored_borderless_text_material" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="25dp"
        android:id="@+id/num9"
        android:layout_alignBottom="@+id/num8"
        android:layout_alignStart="@+id/num6"
        android:textColor="@color/abc_btn_colored_borderless_text_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25dp"
        android:id="@+id/num0"
        android:textColor="@color/abc_btn_colored_borderless_text_material"
        android:layout_below="@+id/num7"

        android:layout_alignStart="@+id/num7"
        android:layout_marginTop="20dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="25sp"
        android:id="@+id/minus"
        android:background="#f271b8"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/num0"
        android:layout_alignLeft="@+id/num9"
        android:layout_alignStart="@+id/num9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="25sp"
        android:id="@+id/plus"
        android:background="#f271b8"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/num0"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="25sp"
        android:id="@+id/equals"
        android:background="#f271b8"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/division"
        android:layout_below="@id/division"
        android:layout_marginTop="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="18sp"
        android:id="@+id/multiplication"
        android:background="#f271b8"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/plus"
        android:layout_below="@id/plus"
        android:layout_marginTop="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="20sp"
        android:id="@+id/percent"
        android:background="#f271b8"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/multiplication"
        android:layout_below="@id/multiplication"
        android:layout_marginTop="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="25sp"
        android:id="@+id/division"
        android:background="#f271b8"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/minus"
        android:layout_below="@id/minus"
        android:layout_marginTop="15dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="25sp"
        android:id="@+id/C"
        android:background="#f271b8"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/multiplication"
        android:layout_alignBottom="@id/equals"
        android:layout_alignStart="@+id/num0"
        android:layout_below="@id/num0"
        />














</RelativeLayout>
